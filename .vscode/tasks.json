{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "cargo",
			"args": [
				"mommy",
				"run",
				"-F",
				"bevy/dynamic_linking"
			],
			"env": {
				"CARGO_MANIFEST_DIR": "${workspaceFolder}",
				"LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${env:HOME}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib"
			},
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run (w DLL)"
		},
		{
			"type": "cargo",
			"command": "cargo",
			"args": [
				"mommy",
				"clippy",
				"-F",
				"bevy/dynamic_linking"
			],
			"env": {
				"CARGO_MANIFEST_DIR": "${workspaceFolder}",
				"LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${env:HOME}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib"
			},
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: Clippy"
		},
		{
			"label": "rust: cargo build (w DLL)",
			"type": "cargo",
			"command": "cargo",
			"args": [
				"mommy",
				"build",
				"-F",
				"bevy/dynamic_linking"
			],
			"env": {
				"CARGO_MANIFEST_DIR": "${workspaceFolder}",
				"LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${env:HOME}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib"
			},
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "Run Tests",
			"type": "cargo",
			"command": "cargo",
			"args": [
				"mommy",
				"test",
				"-F",
				"bevy/dynamic_linking"
			],
			"env": {
				"CARGO_MANIFEST_DIR": "${workspaceFolder}",
				"LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${env:HOME}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib"
			},
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}